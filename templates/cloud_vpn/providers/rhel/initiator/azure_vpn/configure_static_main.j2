conn {{ cloud_vpn_name }}-{{ cloud_vpn_responder_public_ip | to_uuid }}
    left={{ cloud_vpn_initiator_private_ip }}
    leftid={{ cloud_vpn_initiator_public_ip }}
    right={{ cloud_vpn_responder_public_ip }}
    authby=secret
    leftsubnet=0.0.0.0/0
    rightsubnet=0.0.0.0/0
    auto=start
    mark=5/0xffffffff
    vti-interface=vti01
    vti-routing=no
    leftvti={{ cloud_vpn_initiator_tunnel_ip }}/30
    ikev2=yes
    ike=aes256-sha1;modp1024
    phase2alg=aes128-sha1
